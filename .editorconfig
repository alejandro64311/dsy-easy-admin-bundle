; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
end_of_line = LF

[*.{php,yml,js,twig}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true
charset = utf-8

#ignore minified
[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
